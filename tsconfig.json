{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true
    },
    "include": [
        "src/**/*"
    ]
}
